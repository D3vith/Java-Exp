  "slot_backgrounds": {
    "type": "panel",
    "$slot_backgrounds_binding_condition|default": "visible",
    "controls": [
      { "slot_classic@slot_crafting_ui.slot_background_classic": {} },
      { "slot_normal@slot_crafting_ui.slot_background_normal": {} },
      { "slot_invert@slot_crafting_ui.slot_background_invert": {} },
      { "slot_red@slot_crafting_ui.slot_background_red": {} },
      { "slot_selected@slot_crafting_ui.slot_background_selected": {} },
      { "slot_hint@game_tip.cell_image_classic_hint": {} }
    ],
    "bindings": [
      {
        "binding_name": "#container_item_background",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name",
        "binding_condition": "$slot_backgrounds_binding_condition"
      }
    ]
  },

  "slot_background_classic": {
    "type": "panel",
    "$sourceName": "(#container_item_background = 0)",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "$background_image_control_name",
        "resolve_sibling_scope": true,
        "source_property_name": "$sourceName",
        "target_property_name": "#visible"
      }
    ]
  },

  "slot_background_normal@slot_crafting_ui.slot_background_classic": {
    "$sourceName": "(#container_item_background = 1)"
  },

  "slot_background_invert@slot_crafting_ui.slot_background_classic": {
    "$sourceName": "(#container_item_background = 2)"
  },

  "slot_background_red@slot_crafting_ui.slot_background_classic": {
    "$sourceName": "(#container_item_background = 3)",
    "controls": [
      {
        "red@slot_crafting_ui.slot_bg": {
          "color": "red",
          "alpha": 0.35,
          "layer": 0
        }
      },
      {
        "red@slot_crafting_ui.slot_bg": {
          "color": "white",
          "alpha": 0.2,
          "layer": 7
        }
      }
    ]
  },

  "slot_bg": {
    "type": "image",
    "texture": "assets/fmarquespto/textures/static/white",
    "$slotbg_size|default": ["100% - 2px", "100% - 2px"],
    "size": "$slotbg_size",
    "anchor_to": "center",
    "anchor_from": "center"
  },

  "slot_background_selected@slot_crafting_ui.slot_background_classic": {
    "$sourceName": "(#container_item_background = 4)"
  }
